@if (ViewBag.notFound)
{
    <li class="list-group-item list-group-item-danger"> Veuillez Verifier les informations </li>

}

<div class="container">
<form asp-controller="Person" asp-action="Search" method="post" style="padding-top: 20px">
     <div class="form-group" style="padding-top: 100px">
       <label>First Name</label>
        <br />
        @Html.TextBoxFor(model => model.FirstName, new{ @class = "form-control", @placeholder="Enter your first name"})
       
       <label>Country</label>
        <br />
        @Html.TextBoxFor(model => model.LastName , new{ @class = "form-control", @placeholder="Enter your last name"})
  </div>
  <button type="submit" class="btn btn-primary" style="margin-top: 20px">Search</button>
</form>
</div>
<div class="container" style="padding-top: 30px">
  <a asp-controller="Person" asp-action="all">All Persons</a>
</div>


