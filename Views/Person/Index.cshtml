@model tp3dotnet.Models.Person
@{

    <nav class="navbar navbar-light">
    <a class="navbar-brand" asp-area="" asp-controller="Person" asp-action="all">Persons</a>
</nav>  
<ul class="list-group">
        @if (Model == null)
        {
           <li class="list-group-item list-group-item-danger">Cet id est invalide</li>
        }
        else{
        <li class="list-group-item disabled">id : @Model.id</li>
        <li class="list-group-item">First name : @Model.first_name</li>
        <li class="list-group-item">Last name : @Model.last_name</li>
        <li class="list-group-item">Email : @Model.email</li>
        <li class="list-group-item">Image : @Model.image</li>
        <li class="list-group-item">Country : @Model.country</li>
        }
    </ul>
}